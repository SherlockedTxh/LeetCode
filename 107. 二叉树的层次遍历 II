class Solution {
public:
    vector<vector<int>> levelOrderBottom(TreeNode* root) {
        vector<vector<int>> ans;
        queue<TreeNode*> q;
        TreeNode* curr = root;
        q.push(curr);
        while(!q.empty()){
            int size = q.size();
            vector<int> tmp;
            while(size--){
                curr = q.front();
                q.pop();
                if(curr){
                    tmp.push_back(curr->val);
                    q.push(curr->left);
                    q.push(curr->right);
                }
            }
            if(!tmp.empty()) ans.push_back(tmp);
        }
        reverse(ans.begin(), ans.end());
    }
};
